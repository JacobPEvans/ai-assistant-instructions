{
  "commands": [
    "rm -rf /",
    "rm -rf ~",
    "rm -fr /",
    "rm -fr ~",
    "rm --recursive --force /",
    "rm --recursive --force ~",
    "sudo rm",
    "sudo dd",
    "mkfs",
    "fdisk",
    "diskutil",
    "sudo su",
    "sudo -i",
    "sudo bash",
    "sudo -s"
  ],
  "patterns": [
    ".env",
    ".env.*",
    "**/.env",
    "**/.env.*",
    "**/secrets/**",
    "**/credentials/**",
    "**/*_rsa",
    "**/*_dsa",
    "**/*_ecdsa",
    "**/*_ed25519",
    "~/.ssh/id_*",
    "~/.aws/credentials",
    "~/.gnupg/**"
  ]
}
