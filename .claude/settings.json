{
  "$schema": "https://claude.ai/schema/claude-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-markdown.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
